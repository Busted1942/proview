{
  "name": "ProView",
  "version": "1.0.0",
  "last_updated": "2025-08-11T00:00:00Z",
  "description": "ProView — A Professional Response Framework for reviewing technical, business, and professional content.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Busted1942/proview"
  },
  "author": "Matt Watson",
  "license": "MIT",

  "help_trigger": "Help ProView Mode",
  "help_text": "ProView improves professional content via Fact Mode (fact validation + language edits without changing meaning) and Insight Mode (clearly labeled inferences). Labels: FACT EDIT, LANGUAGE EDIT, INFERENCE. Feedback: Core Recommendations + Optional Enhancements.",

  "banner": {
    "enabled": true,
    "show_once_per_chat": true,
    "text_templates": {
      "default": "✅ ProView active. • Scope: {{scope}}"
    }
  },

  "preferences": {
    "hide_banner_on_first_use": false
  },

  "install_flow_ref": "See INSTALLER.md",
  "rules_markdown_url": "https://raw.githubusercontent.com/Busted1942/proview/main/rules_markdown.md",

  /* ======== NEW FEATURES (v1.0-ready, off by default) ======== */

  "remote": {
    "status_url": "https://raw.githubusercontent.com/Busted1942/proview/main/status.json",
    "enabled": true,
    "on_error": "proceed"        // proceed | warn | abort
  },

  "i18n": {
    "default_locale": "en-US",
    "locales_index_url": "https://raw.githubusercontent.com/Busted1942/proview/main/locales/locales.json",
    "strings_url_template": "https://raw.githubusercontent.com/Busted1942/proview/main/locales/{{locale}}.json"
  },

  "auto_update": {
    "config_url": "https://raw.githubusercontent.com/Busted1942/proview/main/proview.json",
    "enabled": false,            // leave OFF for v1.0 test; can enable later
    "check_interval_days": 7
  },

  "telemetry": {
    "enabled": false,            // opt-in only
    "mode": "local",             // local | remote
    "remote_url": "",            // set only if mode=remote
    "fields": ["mode_used", "labels_used", "edits_count"],  // minimal by default
    "anonymize": true
  },

  "themes": {
    "active": "default",
    "index_url": "https://raw.githubusercontent.com/Busted1942/proview/main/themes/themes.json",
    "theme_url_template": "https://raw.githubusercontent.com/Busted1942/proview/main/themes/{{theme}}.json"
  },

  "profiles": {
    "active": "default",
    "profiles_url": "https://raw.githubusercontent.com/Busted1942/proview/main/profiles/profiles.json"
  },

  "security": {
    "hashes_url": "https://raw.githubusercontent.com/Busted1942/proview/main/hashes.json",
    "verify_core_files": true
  },

  "offline": {
    "cache_enabled": true,
    "cache_files": [
      "proview.json",
      "rules_markdown.md",
      "locales/en-US.json"
    ]
  },

  "context": {
    "auto_mode_switch": true,
    "fact_bias_threshold": 0.6,    // >0.6 numeric/claims => prefer Fact Mode
    "insight_bias_threshold": 0.6  // >0.6 conceptual/strategy => suggest Insight Mode
  },

  "changelog": {
    "url": "https://raw.githubusercontent.com/Busted1942/proview/main/changelog.json",
    "show_on_update": true
  },

  "keywords": [
    "proview",
    "professional review",
    "fact validation",
    "insight",
    "writing framework"
  ]
}
