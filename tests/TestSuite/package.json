{
  "name": "proview-suite-runner",
  "version": "0.2.0",
  "description": "YAML-driven LLM test runner for ProView Installer + Runtime with partial support for Comprehensive Suite fields.",
  "type": "module",
  "main": "runner.js",
  "scripts": {
    "test": "node runner.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "openai": "^4.56.0"
  }
}

{
  "scripts": {
    "test": "node runner.js",
    "test:smoke": "INCLUDE_TAGS=smoke node runner.js",
    "test:ids": "INCLUDE_IDS=T001,T002 node runner.js",
    "test:grep": "GREP_TITLE=escalation node runner.js",
    "test:watch": "nodemon -q --exec \"node runner.js\""
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
